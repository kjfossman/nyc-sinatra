<h2>Create New Landmark</h2>

<form action="/landmarks" method="POST">
    <label>Name:</label>

    <br>

    <input type ="text" name="landmark[name]" id="landmark_name">

    <label>Year Completed:</label>

    <br>

    <input type ="text" name="landmark[year_completed]" id="landmark_year_completed">

    <h3>Figures</h3>
        <% @figures.each do |figure| %>
            <input type="checkbox" name="figure[figure_ids][]" id="<%= "figure_#{figure.id}" %>" value="<%= figure.id %>"><%= figure.name %><br>
        <% end %>
    <br>

    <h3>Create New Figure</h3>
    <label>Figure Name: </label>
    <br>
    <input type="text" name="figure[name]" id="new_figure"></input>
    <br><br>

   
    <input type="submit" value="Create New Landmark">
    </form>


<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
